@using PoliteCaptcha
@model Sample.SendFeedbackRequest
@{
    ViewBag.Title = "Index";
}
<h2>Sample with fallback to CAPTCHA</h2>
<p>This is a sample send feedback form that uses PoliteCaptcha spam prevention. The spam prevention is intentionally broken in this sample, but CAPTCHA fallback will be bypassed via the BypassCaptchaGenerator and BypassCaptchaValidator for local requests (see ~/App_Start/DependencyRegistrar.cs).</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Send Feedback</legend>
        @Html.EditorForModel()
        @Html.SpamPreventionFields()
        <p>
            <input type="submit" value="Send" />
        </p>
    </fieldset>
}
@section BottomScripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @* Intentionally leaving the PoliteCaptcha script to force fallback to CAPTCHA *@
    @* @Html.SpamPreventionScript() *@
}
